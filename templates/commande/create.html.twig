{% extends 'base.html.twig' %}

{% block title %}Creation Commande{% endblock %}

{% block body %}
    <hr>
    <h6>Ajout d'un nouvel commande</h6>
    <hr>
    {{form_start(formCommande)}}
      <div class="form-group">
        <fieldset>
          {{form_row(formCommande.client,{ 'attr': {'placeholder':'inserer le nom du Client','class':'form-control'} })}}
        </fieldset>
      </div>
      <div class="form-group">
        <fieldset>
          {{form_row(formCommande.dateCom,{ 'attr': {'placeholder':'inserer l\'adresse du Client','class':'form-control'} })}}
        </fieldset>
      </div>
      <button type="submit" class="btn btn-info">
        {% if editMode %}
          Enregistrer
        {% else %}
          Ajouter
        {% endif %}
      </button>
    {{form_end(formCommande)}}
{% endblock %}
